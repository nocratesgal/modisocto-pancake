---  
import Layout from '../layouts/Layout.astro';  
import AppCard from '../components/AppCard.astro';  
import apps from '../data/apps.json';  
  
const games = apps.filter(a => a.type === 'games');  
---  
  
<Layout title="All Games - ModLynx" description="Browse all modded games with premium features unlocked.">  
    <div class="page-header">  
        <h1>ðŸŽ® All Games</h1>  
        <p>{games.length} modded games available</p>  
    </div>  
  
    <div class="container">  
        <div class="apps-grid">  
            {games.map(app => <AppCard app={app} />)}  
        </div>  
    </div>  
</Layout>  
  
<style>  
    .page-header {  
        padding: 3rem 2rem 2rem;  
        max-width: 1400px;  
        margin: 0 auto;  
    }  
  
    .page-header h1 {  
        font-size: 2.5rem;  
        font-weight: 700;  
        margin-bottom: 0.5rem;  
    }  
  
    .page-header p {  
        color: #888;  
        font-size: 1.1rem;  
    }  
  
    .container {  
        max-width: 1400px;  
        margin: 0 auto;  
        padding: 2rem;  
    }  
  
    .apps-grid {  
        display: grid;  
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));  
        gap: 1.5rem;  
    }  
  
    @media (max-width: 768px) {  
        .page-header h1 {  
            font-size: 1.8rem;  
        }  
  
        .apps-grid {  
            grid-template-columns: 1fr;  
        }  
  
        .container {  
            padding: 1rem;  
        }  
    }  
</style>
